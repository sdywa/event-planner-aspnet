<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventPlanner</title>
    @await RenderSectionAsync("Styles", required: false)
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&family=Ubuntu:wght@300;400;500;700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/e40197cdae.js" crossorigin="anonymous"></script>
</head>
<body>
    @if (ViewData["Header"] != null)
    {
        await Html.RenderPartialAsync(string.Format("{0}", ViewData["Header"]), (bool?) ViewData["IsFixed"] == true);
    }
    <main role="main">
        <div class="container">
            @await RenderSectionAsync("PageCover", false)
            <div class="page">
                <div class="page-wrapper">
                    <div class="page-container">
                        <div class="page-header">
                            @await RenderSectionAsync("PageHeader")
                        </div>
                        <div class="page-content">
                            @await RenderSectionAsync("PageContent")
                        </div>
                    </div>
                </div>
            </div>
            <div class="background">
                <div id="particles-js">
                    <canvas class="particles-js-canvas-el" style="width: 100%; height: 100%;"></canvas>
                </div>
            </div>
        </div>
    </main>
    @{ await Html.RenderPartialAsync("_ParticlesScriptsPartial"); }
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>