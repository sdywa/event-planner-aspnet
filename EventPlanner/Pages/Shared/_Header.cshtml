@model bool

@{
    var headerClass = Model ? "header--fixed" : "";
}
<header class="header @headerClass">
    <nav class="navbar">
        <a class="navbar-logo" asp-area="" asp-page="/Index">EventPlanner</a>
        <ul class="navbar-nav navbar-main">
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-page="/Events/Events">Мероприятия</a>
            </li>
        </ul>
        <ul class="navbar-nav">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <li class="nav-item">
                    <a asp-page="/Settings/Account">@User.FindFirst("FirstName")?.Value</a>
                </li>
                <li class="nav-item">
                    <a class="button button--nav" asp-page="/Auth/Logout">Выйти</a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="button button--nav" asp-page="/Auth/Login" asp-route-type="login">Вход</a>
                </li>
                <li class="nav-item">
                    <a class="button button--nav" asp-page="/Auth/Signup" asp-route-type="signup">Регистрация</a>
                </li>
            }
        </ul>
    </nav>
    <div class="header-background"></div>
</header>
