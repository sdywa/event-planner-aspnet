@page "{id:int}"
@model EventPlanner.Pages.EventModel
@using System.Globalization
@using EventPlanner.Models
@using EventPlanner.HtmlHelpers
@{
    ViewData["Header"] = null;
    ViewData["Title"] = Model.CurrentEvent.Name;
    var culture = new CultureInfo("ru-RU");
}

<div class="container event-container">
    <div class="cover">
        <div class="cover-backgrounds">
            <div class="cover-img">
                <img src="@Model.CurrentEvent.CoverUrl" alt="Обложка">
                <div class="cover-shadow"></div>
            </div>
        </div>
    </div>
    <div class="page">
        <div class="page-wrapper">
            <div class="page-content">
                <div class="event-main">
                    <div class="desc-box">
                        <div class="title desc-title">
                            @Model.CurrentEvent.Name
                        </div>
                        <div class="tags-box">
                            <i class="fa-solid fa-tags"></i>
                            <ul class="tags">
                                <li class="tag">@Model.CurrentEvent.Category.Title</li>
                            </ul>
                        </div>
                    </div>
                    <div class="text-box">
                        @Model.CurrentEvent.Description
                    </div>
                </div>
                <div class="event-box">
                    <div class="date">
                        <div class="date-title">
                            <i class="fa-solid fa-calendar"></i>
                            @Html.GetDate(Model.CurrentEvent.StartTime, culture);
                        </div>
                        <div class="date-day event-subtext">
                            @Html.GetDayName(Model.CurrentEvent.StartTime, culture);
                        </div>
                        <div class="date-time event-subtext">
                            В @Html.GetTime(Model.CurrentEvent.StartTime)
                        </div>
                    </div>
                    @if (@Model.CurrentEvent.Address != null) 
                    {
                        <div class="location">
                            <div class="location-title">
                                <i class="fa-solid fa-location-dot"></i>
                                @Model.CurrentEvent.Address.Title
                            </div>
                            <div class="location-address event-subtext">
                                @Html.GetAddress(Model.CurrentEvent.Address)    
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="background">
        <div id="particles-js">
            <canvas class="particles-js-canvas-el" style="width: 100%; height: 100%;"></canvas>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/event.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/lib/particles.js/particles.js"></script>
    <script src="~/js/particles.js"></script>
}